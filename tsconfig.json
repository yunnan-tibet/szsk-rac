{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.tsx", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}
